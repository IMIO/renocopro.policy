<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="renocopro.policy"
      tal:define="foo python:request.set('disable_plone.leftcolumn', 1)">
<body>
<metal:js fill-slot="javascript_head_slot">
  <script tal:define="site_url context/@@plone_portal_state/portal_url" tal:attributes="src string:${site_url}/++plone++renocopro.policy/js/renocopro.js"></script>
</metal:js>
<metal:main fill-slot="main">

  <div class="row">
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-4">
          <div class="rex_img_large_border" tal:condition="python: getattr(context, 'image', None)">
            <div class="rex_img_large">
              <img class="view img-responsive" src="" tal:attributes="src string: ${context/absolute_url}/@@images/image" />
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <ul>
            <li class="rexlisttech">
              <span i18n:translate="" class="label">Name of the company/organization</span>:
              <span tal:content="context/title"></span>
            </li>
            <li class="rexlisttech">
                <span i18n:translate="" class="label">Specific activities in the field of condominium renovation</span>:
                <ul tal:define="activities context/activity">
                  <li tal:repeat="activity activities">
                    <span tal:content="python: view.get_taxonomy_item(context, 'collective.taxonomy.type_of_professional', activity)"></span>
                  </li>
                </ul>
            </li>
          </ul>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="rexlisttech" tal:condition="context/rich_description">
            <div i18n:translate="" class="label">Description of the company's activity</div>
            <div tal:replace="structure context/rich_description/output"></div>
          </div>
          <div class="rexlisttech" tal:condition="context/specific_activities">
            <div i18n:translate="" class="label">Description of specific activities</div>
            <div tal:replace="structure context/specific_activities/output"></div>
          </div>
          <div class="rexlisttech">
            <div tal:replace="structure context/@@realization_view" />
            </div>
          </div>
        </div>
    </div>
    <div class="col-md-3">
      <ul tal:define="num context/number;
                      street context/street;
                      city context/city;
                      zip_code context/zip_code">
        <li class="rexlisttech" tal:condition="python: view.pretty_address(num, street, city, zip_code)">
          <span tal:content="python: view.pretty_address(num, street, city, zip_code)"></span>
        </li>
        <li class="rexlisttech" tal:condition="context/website">
          <span tal:content="context/website"></span>
        </li>
        <li class="rexlisttech" tal:define="legal_status context/legal_status" tal:condition="context/legal_status">
          <span tal:content="python: view.get_taxonomy_item(context, 'collective.taxonomy.legal_status', legal_status)"></span>
        </li>
        <li class="rexlisttech">
          <span tal:content="context/vat"></span>
        </li>
        <li class="rexlisttech">
          <div i18n:translate="" class="label">Contact person</div>
          <ul tal:define="last_name context/last_name;
                          first_name context/first_name">
            <li class="rexlisttech" tal:condition="python: view.pretty_contact(last_name,first_name)">
              <span tal:content="python: view.pretty_contact(last_name,first_name)"></span>
            </li>
            <li class="rexlisttech" tal:condition="context/phone">
              <span tal:content="context/phone"></span>
            </li>
            <li class="rexlisttech" tal:condition="context/email">
              <span tal:content="context/email"></span>
            </li>
          </ul>
        </li>
      </ul>

      <div tal:condition="context/location"
           tal:attributes="data-geojson view/geojson"
           id="faceted-map"
           class="pat-leaflet"
           data-pat-leaflet='
            {
              "fullscreencontrol": true,
              "locatecontrol": false,
              "zoomcontrol": true,
              "minimap": false,
              "geosearch": false
            }'
      ></div>
  </div>
</metal:main>

</body>
</html>
